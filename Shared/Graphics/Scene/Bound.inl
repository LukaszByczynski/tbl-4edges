///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Bound::Bound() : m_position(0,0,0), m_radius(0)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Bound::Bound(const Vector3& position, f32 radius) : m_position(position), m_radius(radius)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void Bound::setPosition(const Vector3& position)
{
	m_position = position;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const Vector3& Bound::position() const
{
	return m_position;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void Bound::setRadius(f32 radius)
{
	m_radius = radius;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline f32 Bound::radius() const
{
	return m_radius;
}
