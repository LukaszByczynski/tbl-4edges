///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Model::Model() : m_modelData(0), m_boneArray(0), m_next(0)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline ModelData* Model::modelData() const
{
	return m_modelData;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void Model::setModelData(ModelData* modelData)
{
	m_modelData = modelData;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline BoneArray* Model::boneArray() const
{
	return m_boneArray;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void Model::setBoneArray(BoneArray* boneArray)
{
	m_boneArray = boneArray;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void Model::setNext(Model* next)
{
	m_next = next;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Model* Model::next() const
{
	return m_next;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Model** Model::collectedModels()
{
	return m_collectedModelsList;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline uint Model::collectedModelsCount()
{
	return m_collectedModelsCount;
}


