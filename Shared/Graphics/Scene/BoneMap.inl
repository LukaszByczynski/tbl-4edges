inline BoneMap::BoneMap() : m_affected(0)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void BoneMap::setCount( u32 count )
{
	m_bones.resize(count);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline u32 BoneMap::count() const
{
	return m_bones.count();
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline void BoneMap::setAffected( u32 affected )
{
	m_affected = affected;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline u32 BoneMap::affected() const
{
	return m_affected;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline const u32* BoneMap::bones() const
{
	return reinterpret_cast<u32*>(m_bones.objects());
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline u32* BoneMap::bones()
{
	return reinterpret_cast<u32*>(m_bones.objects());
}
