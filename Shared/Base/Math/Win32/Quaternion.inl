///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion::Quaternion()
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion::Quaternion(f32 w, f32 x, f32 y, f32 z) : w(w), x(x), y(y), z(z)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion::Quaternion(const Quaternion& q) : w(q.w), x(q.x), y(q.y), z(q.z)
{
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion::Quaternion(const Matrix4& m)
{
	fromMatrix4(m);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion::Quaternion(const Vector3& axis, f32 angle)
{
	fromAxisAngle(axis, angle);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion Quaternion::zero()
{
	return Quaternion(0, 0, 0, 0);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline Quaternion Quaternion::identity()
{
	return Quaternion(1, 0, 0, 0);
}
