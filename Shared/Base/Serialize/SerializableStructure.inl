inline SerializableStructure::SerializableStructure(SerializableFactory* factory, Identifier identifier, u32 size) :
m_identifier(identifier), m_size(size), m_factory(factory), m_next(factory->structures())
{
	factory->setStructures(this);
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline SerializableStructure::Identifier SerializableStructure::identifier() const
{
	return m_identifier;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline u32 SerializableStructure::size() const
{
	return m_size;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline SerializableFactory* SerializableStructure::factory() const
{
	return m_factory;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

inline SerializableStructure* SerializableStructure::next() const
{
	return m_next;
}
